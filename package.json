{
  "name": "taskforge",
  "version": "1.0.0",
  "description": "Realtime team task tracker",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "sh -c 'if [ -f .env ]; then exec node --env-file=.env --watch src/server.js; else exec node --watch src/server.js; fi'",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "jest",
    "bench": "node scripts/bench.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.16.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "autocannon": "^8.0.0",
    "eslint": "^9.20.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "@types/node": "^22.10.10",
    "@types/express": "^4.17.21"
  }
}
